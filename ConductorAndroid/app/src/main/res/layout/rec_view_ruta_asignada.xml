<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_Rutas"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvEtiquetaDesechar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ruta 1"
                android:textColor="@color/textDesechar"
                android:textStyle="bold"
                android:fontFamily="@font/abel"
                android:gravity="top"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="29dp">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvInicioFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desde - Hasta"
                    android:gravity="top"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tvDias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dias"
                    android:gravity="top"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tvFechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Inicio: "
                    android:gravity="top"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tvFechaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Fin: "
                    android:gravity="top"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tvHoraInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario Inicio: "
                    android:gravity="top"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tvHoraFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora Fin: "
                    android:gravity="top"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>



            </LinearLayout>
            <ImageView
                android:id="@+id/imgDetalleDesechar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/img_base"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="170dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>