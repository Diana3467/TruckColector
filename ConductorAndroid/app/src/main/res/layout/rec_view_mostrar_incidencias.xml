<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_Incidencias"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFecha_Inc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha Incidencia"
                    android:textColor="@color/textDesechar"
                    android:textStyle="bold"
                    android:fontFamily="@font/abel"
                    android:gravity="top"
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvPlaca_Inc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Placa"
                        android:fontFamily="@font/abel"
                        android:textSize="18dp"
                        android:textColor="@color/plomo"
                        android:gravity="top"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:id="@+id/tvDescripcion_Inc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DescripciÃ³n"
                        android:gravity="top"
                        android:fontFamily="@font/abel"
                        android:textSize="18dp"
                        android:textColor="@color/plomo"
                        android:justificationMode="inter_word"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="20dp"
                        />
                    <TextView
                        android:id="@+id/tvEstado_Inc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado: "
                        android:textColor="@color/plomo"
                        android:gravity="top"
                        android:fontFamily="@font/abel"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>